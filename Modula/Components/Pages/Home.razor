@page "/"

<div class="h-100 d-flex flex-column pb-2">
    <div class="header d-flex p-1">
        <button class="btn text-light" data-bs-toggle="offcanvas" data-bs-target="#side_bar">
            <i class="fa-solid fa-bars"></i>
        </button>
        <div class="d-flex align-items-center user-info">
            <span class="text-light fw-semibold pe-1">@currentUserEmployeeCode</span>
            <span class="text-light fw-semibold pe-1 btn-action">-</span>
            <span class="text-light fw-semibold pe-1 btn-action">@currentUserFullname</span>
        </div>
        <div class="flex-grow-1"></div>

        <button class="btn fw-bold" @onclick="OnRefresh">
            <i class="fa-solid fa-arrows-rotate"></i>
            <span class="text-light btn-action">TẢI LẠI</span>
        </button>
        <button class="btn fw-bold" @onclick="OnCall">
            <i class="fa-solid fa-download"></i>
            <span class="text-light btn-action">GỌI</span>
        </button>
        <button class="btn fw-bold" @onclick="OnReturn">
            <i class="fa-solid fa-upload"></i>
            <span class="text-light btn-action">TRẢ</span>
        </button>
        <button class="btn fw-bold" @onclick="OpenModal" data-bs-toggle="modal" data-bs-target="#selectedItemsModal">
            <i class="fa-solid fa-check"></i>
            <span class="text-light btn-action">HOÀN THÀNH</span>
            <span class="badge bg-danger rounded-pill ms-1 btn-action">@SelectedCount</span>
        </button>
    </div>

    <div class="table-container px-2 pt-1">
        <table class="table table-bordered table-striped border-primary">
            <thead class="table-light">
                <tr class="border-primary sticky-top">
                    <th class="text-center align-middle">
                        <input type="checkbox" @bind="IsSelectAll" @bind:event="oninput"
                               @onchange="ToggleSelectAll" />
                    </th>
                    <th>Mã sản phẩm</th>
                    <th>Tên sản phẩm</th>
                    <th>QRCode</th>
                    <th>Vị trí</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in BorrowTickets)
                {
                    <tr class="@(item == FocusedRow ? "table-active" : "")"
                        @onclick="() => OnRowClick(item)">

                        <td class="text-center align-middle">
                            <input type="checkbox"
                                   checked="@item.IsSelected"
                                   @onchange="(e) => ToggleSingle(item, e)" />
                        </td>
                        <td>@item.ProductCode</td>
                        <td>@item.ProductName</td>
                        <td>@item.ProductQRCode</td>
                        <td>@item.ModulaLocationName</td>
                        <td class="td-status text-center">
                            @{
                                var badgeClass = GetStatusBadgeClass(item.StatusText);
                            }
                            <span class="@badgeClass">@item.StatusText</span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal for showing selected items -->
<div class="modal fade" id="selectedItemsModal" tabindex="-1" aria-labelledby="selectedItemsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="selectedItemsModalLabel">
                    <i class="fa-solid fa-list-check me-2"></i>
                    Danh sách đã chọn (@SelectedCount sản phẩm)
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-0">
                <div class="row g-0 h-100">
                    <!-- Left column: Đăng ký mượn -->
                    <div class="col-12 col-md-6 border-end">
                        <div class="d-flex flex-column h-100">
                            <div class="modal-section-header bg-info text-white p-2">
                                <h6 class="mb-0">
                                    <i class="fa-solid fa-download me-1"></i>
                                    ĐĂNG KÝ MƯỢN
                                    <span class="badge bg-light text-dark ms-2">@SelectedMuonCount</span>
                                </h6>
                            </div>
                            <div class="flex-grow-1 overflow-auto p-2" style="max-height: 400px;">
                                @if (SelectedMuonItems.Any())
                                {
                                    <ul class="list-group list-group-flush">
                                        @foreach (var item in SelectedMuonItems)
                                        {
                                            <li class="list-group-item p-2">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <div>
                                                        <div class="fw-bold">@item.ProductCode</div>
                                                        <div class="small text-muted">@item.ProductName</div>
                                                    </div>
                                                    <span class="badge bg-info">@item.ModulaLocationName</span>
                                                </div>
                                                <div class="small mt-1">
                                                    <i class="fa-solid fa-qrcode me-1"></i>
                                                    <span class="text-muted">QR hiện tại: </span>@item.ProductQRCode
                                                </div>
                                                <div class="mt-2">
                                                    <label class="form-label small mb-0">QR Code thực tế:</label>
                                                    <div class="input-group input-group-sm">
                                                        <input type="text"
                                                               id="qr-input-@item.ProductQRCode.Replace(" ", "-")"
                                                               class="form-control form-control-sm"
                                                               @bind="item.ProductQRCodeConfirm"
                                                               @bind:event="oninput"
                                                               @onkeydown="@(async (e) => await HandleKeyDown(e, item))"/>
                                                        <button class="btn btn-outline-secondary" type="button"
                                                                @onclick="() => ResetInput(item)">
                                                            <i class="fa-solid fa-rotate-left"></i>
                                                        </button>
                                                    </div>
                                                    @if (!string.IsNullOrEmpty(item.ProductQRCodeConfirm) && item.ProductQRCodeConfirm == item.ProductQRCode)
                                                    {
                                                        <small class="text-success">
                                                            <i class="fa-solid fa-check me-1"></i>
                                                            Đã xác nhận
                                                        </small>
                                                    }
                                                </div>
                                            </li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <div class="text-center text-muted py-5">
                                        <i class="fa-solid fa-box-open fa-2x mb-2"></i>
                                        <p class="mb-0">Không có sản phẩm nào</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Right column: Đăng ký trả -->
                    <div class="col-12 col-md-6">
                        <div class="d-flex flex-column h-100">
                            <div class="modal-section-header bg-warning text-dark p-2">
                                <h6 class="mb-0">
                                    <i class="fa-solid fa-upload me-1"></i>
                                    ĐĂNG KÝ TRẢ
                                    <span class="badge bg-light text-dark ms-2">@SelectedTraCount</span>
                                </h6>
                            </div>
                            <div class="flex-grow-1 overflow-auto p-2" style="max-height: 400px;">
                                @if (SelectedTraItems.Any())
                                {
                                    <ul class="list-group list-group-flush">
                                        @foreach (var item in SelectedTraItems)
                                        {
                                            <li class="list-group-item p-2">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <div>
                                                        <div class="fw-bold">@item.ProductCode</div>
                                                        <div class="small text-muted">@item.ProductName</div>
                                                    </div>
                                                    <span class="badge bg-info">@item.ModulaLocationName</span>
                                                </div>
                                                <div class="small mt-1">
                                                    <i class="fa-solid fa-qrcode me-1"></i>
                                                    <span class="text-muted">QR hiện tại: </span>@item.ProductQRCode
                                                </div>

                                                <!-- QR Code Input -->
                                                <div class="mt-2">
                                                    <label class="form-label small mb-0">QR Code mới:</label>
                                                    <div class="input-group input-group-sm">
                                                        <input type="text"
                                                               id="qr-input-return-@item.ProductQRCode.Replace(" ", "-")"
                                                               class="form-control form-control-sm"
                                                               @bind="item.ProductQRCodeConfirmReturn"
                                                               @bind:event="oninput"
                                                               @onkeydown="@(async (e) => await HandleQRCodeKeyDown(e, item))"
                                                               placeholder="Nhập QR Code mới" />
                                                        <button class="btn btn-outline-secondary" type="button"
                                                                @onclick="() => ResetQRCodeInput(item)">
                                                            <i class="fa-solid fa-rotate-left"></i>
                                                        </button>
                                                    </div>
                                                    @if (!string.IsNullOrEmpty(item.ProductQRCodeConfirmReturn) && item.ProductQRCodeConfirmReturn == item.ProductQRCode)
                                                    {
                                                        <small class="text-success">
                                                            <i class="fa-solid fa-check me-1"></i>
                                                            Đã xác nhận
                                                        </small>
                                                    }
                                                </div>

                                                <!-- Location Input -->
                                                <div class="mt-2">
                                                    <label class="form-label small mb-0">Vị trí thực tế:</label>
                                                    <div class="input-group input-group-sm">
                                                        <input type="text"
                                                               id="location-input-@item.ProductQRCode.Replace(" ", "-")"
                                                               class="form-control form-control-sm"
                                                               @bind="item.ModulaLocationCodeConfirm"
                                                               @bind:event="oninput"
                                                               @onkeydown="@(async (e) => await HandleLocationKeyDown(e, item))"
                                                               placeholder="Nhập vị trí thực tế" />
                                                        <button class="btn btn-outline-secondary" type="button"
                                                                @onclick="() => ResetLocationInput(item)">
                                                            <i class="fa-solid fa-rotate-left"></i>
                                                        </button>
                                                    </div>
                                                    @if (!string.IsNullOrEmpty(item.ModulaLocationCodeConfirm) && item.ModulaLocationCodeConfirm == item.ModulaLocationDetailCode)
                                                    {
                                                        <small class="text-success">
                                                            <i class="fa-solid fa-check me-1"></i>
                                                            Đã xác nhận
                                                        </small>
                                                    }
                                                </div>
                                            </li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <div class="text-center text-muted py-5">
                                        <i class="fa-solid fa-box-open fa-2x mb-2"></i>
                                        <p class="mb-0">Không có sản phẩm nào</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fa-solid fa-ban"></i> Hủy</button>
                <button type="button" class="btn btn-primary" @onclick="OnDone" data-bs-dismiss="modal">
                    <i class="fa-solid fa-floppy-disk"></i> Lưu
                </button>
                <button type="button" class="btn btn-primary" @onclick="OnDoneAndLogOut">
                    <i class="fa-solid fa-check"></i> Lưu và thoát
                </button>
            </div>
        </div>
    </div>
</div>

<div class="offcanvas offcanvas-start p-1" tabindex="-1" id="side_bar" aria-labelledby="sidebar">
    <button class="btn" @onclick="OnLogOut">
        <i class="fa-solid fa-right-from-bracket"></i>
        <span class="text-primary"> Đăng xuất</span>
    </button>
</div>
